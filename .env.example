APP_NAME="Trees Framework"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost

# Generate with: echo bin2hex(random_bytes(32));
APP_KEY=your-32-byte-encryption-key-here

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=trees
DB_USERNAME=root
DB_PASSWORD=

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Security Settings
CSRF_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=60
RATE_LIMIT_MINUTES=1

# CORS Settings
CORS_ENABLED=false
CORS_ALLOWED_ORIGINS=*

# Hash Configuration
HASH_DRIVER=argon2id
# Options: bcrypt, argon, argon2id

# Bcrypt Options (if using bcrypt)
BCRYPT_ROUNDS=12

# Argon2id Options (recommended - default)
ARGON2ID_MEMORY=65536
ARGON2ID_TIME=4
ARGON2ID_THREADS=3

# Argon Options (if using argon)
ARGON_MEMORY=65536
ARGON_TIME=4
ARGON_THREADS=3

# Auto rehash passwords on login if needed
HASH_AUTO_REHASH=false